<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
  <table>
   <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @products %>
      <% @products.each do |pro| %>
        <tr>
          <td><%= pro.name %></td>
          <td><%= pro.price %></td>
          <td><%= link_to image_tag(pro.image_url), sub_category_product_path(@sub_category, pro) %></td>
          <td><%= link_to 'Edit', edit_sub_category_product_path(@sub_category,pro) %></td>
          <td><%= link_to 'Destroy',sub_category_product_path(@sub_category, pro), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% end %>  
  </tbody>
</table>
<%= link_to 'New Product', new_sub_category_product_path(@sub_category) %>
<br>
<td><%= link_to ' Go to sub_category', category_sub_categories_path(category_id: @sub_category.category.id) %></td>