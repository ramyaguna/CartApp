<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
  <table>
   <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |pro| %>
      <tr>
        <td><%= pro.name %></td>
        <td><%= pro.price %></td>
        <td><%= link_to image_tag(pro.image_url), subcategory_product_path(@subcategory, pro) %></td>
        <td><%= link_to 'Edit', edit_subcategory_product_path(@subcategory,pro) %></td>
        <td><%= link_to 'Destroy',subcategory_product_path(@subcategory, pro), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Product', new_subcategory_product_path(@subcategory) %>
<br>
<td><%= link_to ' Go to Subcategory', category_subcategories_path(category_id: @subcategory.category.id) %></td>