<p id="notice"><%= notice %></p>

<h1>Listing Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th> 
      <th>Quantity</th>
      <th>Totoal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @order_items.each do |order_item|%>
      <tr>
        <td><%= order_item.product.name%></td>
        <td><%= order_item.product.price%></td>
        <td>
        <%= form_for (order_item) do |f| %>
          <div class="field">
            <%= f.number_field :quantity, :value => order_item.quantity, default: "1" %>
          </div>
        <% end %>        
        <td><%= order_item.product.price%></td>
      </tr>
    <% end %>   
  </tbody>
</table>

<br>

<%= link_to 'New Order item', products_path %>