<p id="notice"><%= notice %></p>

<h1> Subcategories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @sub_categories.each do |sub_category| %>
        <tr>
          <td><%= sub_category.name %></td>
          <td><%= link_to image_tag(sub_category.image_url), sub_category_products_path(:sub_category_id => sub_category.id) %>
          <td><%= link_to 'Show', sub_category %></td>
          <td><%= link_to 'Edit', edit_category_sub_category_path(@category,sub_category) %></td>
          <td><%= link_to 'Destroy', category_sub_category_path(@category, sub_category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>
<br>

<b><%= link_to 'Go to Category', categories_path%></b><br>
<br><%= link_to 'New sub_category', new_category_sub_category_path(@category) %>